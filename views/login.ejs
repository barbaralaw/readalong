<%- include('partials/header') -%>

  <section id="signUpBox">
    <!-- Error notification -->
    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>
    <% } %>
    <% if (locals.messages.info) { %>
        <% messages.info.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>
    <% } %>
    <!-- End Error Notification -->

    <div class="container card text-center shadow " style="margin: 7rem auto; min-width: 300px; max-width: 450px; height: auto">
    <form action="/login" method="POST" class="btn-group flex-column">
        <img src="../imgs/cover.png" alt="reading circle" width="100%">
        <!-- Find out how to switch to a userName login -->
        <div class="form-floating">
          <input type="email" id="email" name="email" placeholder="Email" class="form-control btn-lg my-2">
          <label for="email">E-mail:</label>
        </div>
        <div class="form-floating">
          <input type="password" id="password" name="password" placeholder="Password" class="form-control btn-lg my-2">
          <label for="password">Password:</label>
        </div>
        <div class="">
          <button type="submit" class="btn btn-dark btn-lg">Sign In</button>
        </div>

        <p class="my-0" style="padding-top: 20px">Don't have an account yet? <a href="/signup">SIGN UP</a></p>
    </form>
    </div>
  </section>



    <%- include('partials/footer') -%>
