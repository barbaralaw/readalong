<!-- User Dashboard view -->
<!-- how to distinguish views of teachers vs students? -->
<%- include('partials/header') -%>

  <h1>Welcome, <span><%= user.firstNameChild %></span>!</h1>

  <!-- Nav with image links to add post, class, friends, messages, setting -->
  <div class="">
    <p>Am I here? I think I am.</p>
  </div>

  <!-- Message from teacher section -->
  <!-- Able to minimize? -->
  <div class="">

  </div>

  <!-- div to integrate google books api -->
  <div id="searchGoogle">
    <input type="text" id="title" placeholder="title">
    <input type="text" id="author" placeholder="author">
    <button id="submit">Search</button>
  </div>
  <!-- div containing 3 most recent books -->

  <!-- card with big plus sign to reveal book search div -->
  <!-- arrow to reveal next 3 results -->



  <!-- Insert button to reveal add post form, a lightbox maybe? -->
    <!-- This is where the google books api request form should be -->
    <form id="post" action="/post/createPost" enctype="multipart/form-data" method='POST'>
      <div id="results" class="container">
        <p>Select a book:</p>
        <!--<ul id="results"></ul>-->
      </div>
      <img id="uploadPreview"/>
      <div class='file file--upload'>
        <label for='imageUpload' class="btn btn-primary">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-upload" viewBox="0 0 16 16">
            <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
            <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708l3-3z"/>
          </svg>
          Select an Image
        </label>
        <input type="file" class="form-control" id="imageUpload" name="file" accept="image/*" onchange="loadFile(event)" />
      </div>
      <input type="text" placeholder="Enter Post Title" name='post'>
      <input type="text" placeholder="Body of Post" name='postBody'>
      <input type="submit" class="btn btn-primary" value="Add Post">
    </form>

  <!-- Horizontal feed of your most recent posts -->
  <!-- Card with giant plus sign to add new post -->
  <!-- Big arrow to see all your posts -->
  <div class="container">
    <div id="recentPosts" style="display: flex" style="flex-wrap=wrap">
      <% for (let i=0; i<3; i++) { %>
        <div class="card" style="display: flex" style="width: 33.33%">
          <div class="container">
            <h3><%= post[i].bookTitle %></h3>
            <img class="img-fluid" src="<%= post[i].bookThumbnail %>" alt="<%= post[i].bookTitle %>">
          </div>
          <div class="container">
            <h3><%= post[i].post %></h3>
            <p><%= post[i].postBody %></p>
            <img class="img-fluid" src="<%= post[i].image %>" alt="<%= post[i].post %>">
          </div>


        </div>
      <% } %>
      <div class="card">
        <p class="d2">+</p>
      </div>
      <button id="seeAllPosts">See all</button>
    </div>
    <div id="allPosts">
      <% for (let i=0; i<post.length; i++) { %>
        <div class="card" style="width: 33.33%">
          <h3><%= post[i].bookTitle %></h3>
          <p><%= post[i].post %></p>
          <p><%= post[i].postBody %></p>
          <img class="img-fluid" src="<%= post[i].bookThumbnail %>" alt="<%= post[i].bookTitle %>">
        </div>
      <% } %>
    </div>
  </div>


  <!-- Vertical feed of your friends' posts -->
  <!-- Associated book on left, what your friend did on right -->
  <div class="">

    <a class="btn btn-primary" href="/feed">Return to Feed</a>
  </div>


    <div>
        <p><strong>User Name</strong>: <%= user.userName %></p>
        <p><strong>Email</strong>: <%= user.email %></p>
        <a href="/logout" class="col-3 btn btn-primary">Logout</a>
    </div>

<!-- what is all this? -->
    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>
    <% } %>
    <% if (locals.messages.info) { %>
        <% messages.info.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>
    <% } %>


    <script src="/js/main.js"></script>
    <script src="/js/postPage.js"></script>
    <%- include('partials/footer') -%>
